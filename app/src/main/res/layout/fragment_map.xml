<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.and
    roid.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/truck_main_image"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                />

            <com.hedgehog.ratingbar.RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Ratingbar"
                hedgehog:clickable="false"
                hedgehog:halfstart="true"
                hedgehog:starCount="5"
                hedgehog:starFill="@drawable/ic_star_fill"
                hedgehog:starEmpty="@drawable/ic_star_empty"
                hedgehog:starHalf="@drawable/ic_star_half"
                hedgehog:starImageHeight="50dp"
                hedgehog:starImageWidth="50dp"
                style="?android:ratingBarStyle"
                android:isIndicator="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/sw_turn_buss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="25dp"
                    android:text="영업여부" />
                <Switch
                    android:id="@+id/sw_loc_agree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="25dp"
                    android:text="위치정보 공개" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="fill_parent"
                android:layout_height="360dp"
                android:layout_weight="8"></com.google.android.gms.maps.MapView>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>


