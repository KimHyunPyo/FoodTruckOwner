<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/common_action_bar_splitter"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="푸드트럭 정보 입력"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:id="@+id/truck_info"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dip"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:background="#ffffffff"
                android:textColor="#ff333333"
                android:textColorHint="#ffaaaaaa"
                android:id="@+id/truck_name"
                android:paddingLeft="20.0dip"
                android:layout_width="match_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginBottom="10.0dip"
                android:hint="푸드트럭 이름"
                android:ems="10"
                android:layout_below="@+id/toolbar"

                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Spinner

                android:background="#ffffffff"
                android:textColorHint="#ffaaaaaa"
                android:paddingLeft="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginBottom="10.0dip"
                android:id="@+id/spinner"
                android:hint="판매할 메뉴 카테고리 선택"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_below="@id/truck_name"
                android:spinnerMode="dialog" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="결제 가능 수단 선택"
                android:paddingLeft="20.0dip"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:id="@+id/payment"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_below="@id/spinner"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <RadioGroup

                android:id="@+id/radioPayment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/payment"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_weight="1"
                android:background="@color/white">

                <RadioButton
                android:text="현금"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:id="@+id/cash"
                android:textSize="20dp"
                android:layout_weight="1" />

                <RadioButton
                    android:text="카드"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/card"
                    android:textSize="20dp"
                    android:layout_weight="1" />

                <RadioButton
                android:text="현금 + 카드"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:id="@+id/cash_card"
                android:textSize="20dp"
                android:layout_weight="1" />

            </RadioGroup>

        </LinearLayout>

        <com.dd.processbutton.iml.ActionProcessButton
            android:text="등록하기"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            custom:pb_colorNormal="@color/blue_normal"
            android:id="@+id/truckbtn"
            android:layout_below="@id/payment"
            android:layout_marginTop="10dp" />

    </LinearLayout>


</RelativeLayout>
