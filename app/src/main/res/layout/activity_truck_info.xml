<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/common_action_bar_splitter"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="푸드트럭 정보 입력"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:id="@+id/truck_info"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dip"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:background="#ffffffff"
                android:textColor="#ff333333"
                android:textColorHint="#ffaaaaaa"
                android:id="@+id/truck_name"
                android:paddingLeft="20.0dip"
                android:layout_width="match_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginBottom="10.0dip"
                android:hint="푸드트럭 이름"
                android:ems="10"
                android:layout_below="@+id/toolbar"

                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Spinner

                android:background="#ffffffff"
                android:textColorHint="#ffaaaaaa"
                android:paddingLeft="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginBottom="10.0dip"
                android:id="@+id/spinner"
                android:hint="판매할 메뉴 카테고리 선택"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_below="@id/truck_name"
                android:spinnerMode="dialog" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="결제 가능 수단 선택"
                android:paddingLeft="10.0dip"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:id="@+id/payment"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_below="@id/spinner"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <RadioGroup

                android:id="@+id/radioPayment"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:orientation="horizontal"
                android:layout_below="@+id/payment"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
               >

                <RadioButton
                android:text="현금"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:id="@+id/cash"
                android:textSize="15sp"
                android:layout_weight="1" />

                <RadioButton
                    android:text="카드"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/card"
                    android:textSize="15sp"
                    android:layout_weight="1" />

                <RadioButton
                android:text="현금 + 카드"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:id="@+id/cash_card"
                android:textSize="15sp"
                android:layout_weight="1" />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">


            <ImageView
                android:background="#ffffffff"
                android:id="@+id/imageUpload"
                android:paddingLeft="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:hint="트럭 대표 이미지 등록"
                android:layout_below="@+id/radioPayment"
                android:layout_centerHorizontal="true"
                 />


            <com.dd.processbutton.iml.ActionProcessButton
                android:id="@+id/bt_upload"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:text="사진 등록"
                android:textColor="@android:color/white"
                android:textSize="14.0sp"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginBottom="10.0dip"

                custom:pb_colorComplete="@color/green_complete"
                custom:pb_colorNormal="@color/blue_normal"
                custom:pb_colorPressed="@color/blue_pressed"
                custom:pb_colorProgress="@color/purple_progress"
                custom:pb_textComplete="Success"
                custom:pb_textProgress="Loading"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/radioPayment"
                android:onClick="Onclick_Confrim"
                android:layout_alignParentRight="false" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/select_country"
                android:text="주요 활동지역 선택"
                android:paddingLeft="10.0dip"
                android:layout_width="match_parent"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_below="@id/imageUpload"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_height="40dip" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:hint="지역선택"
                android:background="#ffffffff"
                android:textColorHint="#ffaaaaaa"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                style="?android:attr/spinnerItemStyle"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textSize="18sp"
                android:id="@+id/city"
                android:entries="@array/city_select"
                android:layout_weight="1" />

            <Spinner
                android:hint="시/군/구"
                android:background="#ffffffff"
                android:textColorHint="#ffaaaaaa"
                android:textSize = "20sp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginBottom="10.0dip"
                android:id="@+id/country"
                android:layout_weight="1" />
        </LinearLayout>

        <com.dd.processbutton.iml.ActionProcessButton
            android:text="등록하기"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            custom:pb_colorNormal="@color/blue_normal"
            android:id="@+id/bt_insert_truck"
            android:layout_below="@id/payment"
            android:layout_marginTop="10dp" />

    </LinearLayout>


</RelativeLayout>
